<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBG"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".Activitys.Normal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Normal"
                    android:textColor="#000000"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/addData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_plus"
                    android:textColor="#0055fe"
                    android:textSize="35dp" />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:text="BACK BETS"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d2eefa"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#d2eefa"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Stake"
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/bb_stake"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/textbackground"
                            android:hint="£"
                            android:inputType="numberDecimal"
                            android:padding="5dp">

                            <requestFocus />
                        </EditText>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"

                        android:background="@color/grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="#d2eefa"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Odds"
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/bb_odds"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/textbackground"
                            android:inputType="numberDecimal"
                            android:padding="5dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:text="LAY BETS"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fbd5df"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Odds"
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/lb_odds"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/textbackground"
                            android:inputType="numberDecimal"
                            android:padding="5dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Commision"
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <include layout="@layout/segment_button" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:text="LAY STAKES"
                    android:textSize="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:id="@+id/underlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Underlay"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/underlayDetails1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/u_laystack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0 Lay Stake"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:textSize="20sp"
                            autofit:minTextSize="16sp"
                            />
                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/u_liability"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0.00 Liability"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:textSize="15sp"
                            autofit:minTextSize="8sp"/>



                        <!--<TextView-->
                            <!--android:id="@+id/u_liability"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_gravity="center"-->
                            <!--android:text="0.00 Liability"-->
                            <!--android:textColor="@color/black"-->
                            <!--android:textSize="15dp" />-->

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/underlayDetails2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1.3"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/u_backwin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0.00"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:textSize="20sp"
                            autofit:minTextSize="10sp"/>

                        <me.grantland.widget.AutofitTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Back wins"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:textSize="15sp"
                            autofit:minTextSize="8sp"/>

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/u_laywins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0.00"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:textSize="20sp"
                            autofit:minTextSize="10sp"/>

                        <me.grantland.widget.AutofitTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Lay Wins"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:textSize="15sp"
                            autofit:minTextSize="8sp"/>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageUnder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_right"
                        android:visibility="visible" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:id="@+id/standard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Standard"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/standardDetails1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/s_laystack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="£0 Lay Stake"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:textSize="20sp"
                            autofit:minTextSize="10sp"/>

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/s_liability"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="£0.00 Liability"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:textSize="15dp"
                            autofit:minTextSize="10sp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/standardDetails2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.3"
                        android:gravity="right"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/standardvalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="£0.0"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:textSize="20dp"
                            autofit:minTextSize="10sp"/>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageStandard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_right"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:id="@+id/overlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Overlay"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/overlayDetails1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/o_laystake"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0 Lay Stake"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:textSize="20dp"
                            autofit:minTextSize="10sp"/>

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/o_liability"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0.00 Liability"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:textSize="15dp"
                            autofit:minTextSize="10sp"/>



                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/overlayDetails2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1.3"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/o_backwins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0.00"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:textSize="20dp"
                            autofit:minTextSize="10sp"/>

                        <me.grantland.widget.AutofitTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Back Wins"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:textSize="15dp"
                            autofit:minTextSize="10sp"/>

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/o_laywins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0.00"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:textSize="20dp"
                            autofit:minTextSize="10sp"/>

                        <me.grantland.widget.AutofitTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Lay Wins"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:textSize="15dp"
                            autofit:minTextSize="10sp"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageOverlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
